<h2>Feedback</h2>

<div class = "generalcontent">

<div class = "generalbox">

<table>
<tr>
  <th colspan="2"><%= h @feedback.summary %></th>
</tr>

<tr class="list-even">
   <td><%= h @feedback.user.login %></td>
   <td><%= h to_localtime(@feedback.created_at.to_s) %></td>
</tr>

<tr class="list-odd">
  <td colspan="2"><%= simple_format h(@feedback.details) %></td>
</tr>
</table>

<% if current_user.has_role?(:admin) || current_user.id == @feedback.user_id %>
    <%= link_to 'Edit', edit_feedback_path(@feedback) %>
    <%= link_to 'Destroy', @feedback, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
<br>
<br>
<%= link_to 'Back', feedbacks_path %>

</div>
</div>