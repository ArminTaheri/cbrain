<div class = "generalcontent">

   <% title 'Feedback' %>

   <div class="resource_list_upper_form">
         <%= 
           link_to_function 'Give Feedback', :class  => 'action_link' do |page|
             page['new_feedback'].toggle
           end 
           %>
         <div id="new_feedback" style="display:none">
           <%= render :partial  => 'new' %>
         </div>
   </div> <!-- End class="upper_form" -->

      <table class="resource_list" id="feedback_table">
         <tr>
            <th>Summary</th>
            <th>Author</th>
            <th>Posted at</th>
            <th colspan="2">Operations</th>
         </tr>
   
         <% for feedback in @feedbacks %>
           <%= render :partial => 'feedback_table_row', :locals  => {:feedback  => feedback} %>
         <% end %>
      </table>
      <br/>

</div>  <!-- End class="generalcontent" -->
