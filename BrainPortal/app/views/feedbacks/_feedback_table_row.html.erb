<tr class="<%= cycle('list-odd', 'list-even') %> row_highlight" id="feedback_<%= feedback.id %>">
  <td><%=link_to h(feedback.summary), feedback %></td>
  <td><%= h feedback.user.login %></td>
  <td><%= h(to_localtime(feedback.created_at.to_s,:datetime)) %></td>
  <% if current_user.has_role?(:admin) || current_user.id == feedback.user_id %>
     <td><%= link_to 'Edit', edit_feedback_path(feedback), :class  => 'action_link' %></td>
     <td colspan = "2" class = "ck_box_delete">
         <%= check_box_tag("feedback_ids[]", feedback.id.to_s, false) %>
     </td>
  <% end %>
</tr>
