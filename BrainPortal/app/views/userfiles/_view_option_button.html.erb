<%= button_with_dropdown_menu("View Options") do %>
  <div class="view_options">
    <%= 
      filter_add_link (@filter_params["details"] == 'off' ? "Show Details" : "Hide Details"),
                      :parameter => :details, 
                      :value     => set_toggle(@filter_params["details"])
    %>
    <br>
    <%= 
        filter_add_link (@filter_params["tree_sort"] == "off" ? "Enable Tree View" : "Disable Tree View"), 
                        :parameter => :tree_sort,  
                        :value     => set_toggle(@filter_params["tree_sort"])
    %>
    <br>
    <%= filter_add_link @filter_params["view_all"] == 'on' ? "Show your files ": "Show all available files", 
                        :parameter => :view_all,
                        :value     => set_toggle(@filter_params["view_all"]) 
    %>
    <br>
    Number of files per page:
    <%= ajax_onchange_select( :per_page, userfiles_path(:update_filter => true), options_for_select( [25, 50, 100, 200, 500 ], @per_page ), :datatype => "script") %>
  </div>
<% end %>

