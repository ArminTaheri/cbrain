<span class="selected_info">
  <% if current_session.persistent_userfile_ids.size > 0 %>
    <%= red_if(true,"(#{pluralize(current_session.persistent_userfile_ids.size," file")} persistently selected)") %>
  <% end %>
</span>
<span class="page_links">
<%= will_paginate @userfiles, :inner_window => 5, :outer_window => 4, :container => false, :params => { :file_ids => nil } %>
(<%= @userfiles_total %> files)
</span>
