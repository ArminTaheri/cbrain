<h2>
  QC Tagging for: <%= @userfile.name %>
</h2>
(Dataset <%= @current_index + 1 %> out of <%= @filelist.size %>)
<br><br>
<% if @current_index > 0 %>
  <%= submit_button "Previous", :name => :previous %> 
<% end %>
<%= submit_button "Pass", :name => :pass %> <%= submit_button "Fail", :name => :fail %> <%= submit_button "Unknown", :name => :unknown %> 
<% if @current_index < @filelist.size - 1 %>
  <%= submit_button "Next", :name => :next %>
<% end %>
<br><br>
  <% @filelist.each do |id| %>
    <%= hidden_field_tag "file_ids[]", id %>
  <% end %>
  <%= hidden_field_tag :index, @current_index %>
  <select name="tag_ids[]" multiple="multiple" style="width:150px" >
  <%= options_from_collection_for_select current_user.available_tags, 'id', 'name', @userfile.get_tags_for_user(current_user).map(&:id) %>
  </select>
  <br>
  <%= submit_tag "Update Tags" %>

<br>
<%= render :partial => @partial %>

