<%  
  sf_list = SingleFile.accessible_for_user(current_user, :access_requested => :read).select(:type).order(:type).group(:type).map(&:class)
  fc_list = FileCollection.accessible_for_user(current_user, :access_requested => :read).select(:type).order(:type).group(:type).map(&:class)
%>


<h4>By Type</h4>
     
<ul class="filter_menu">
  <% sf_list.each do |sf| %>
    <li><%= filter_add_link sf.pretty_type.pluralize, :filters => {:file_format  => sf.name} %></li>
  <% end %>
</ul>
<ul class="filter_menu">
  <% fc_list.each do |fc| %>
    <li><%= filter_add_link fc.pretty_type.pluralize, :filters => {:file_format  => fc.name} %></li>
  <% end %>
</ul>

<% @custom_filter = UserfileCustomFilter.new %>
<div id="custom_filters_list">
  <%= render :partial => 'custom_filters/custom_filter_list' %>
</div>




