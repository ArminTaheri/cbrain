<% 
  path = @userfile.cache_full_path 
  if params[:collection_file] && @userfile.list_files.find { |f| f.name == params[:collection_file] }
    path = path.parent + params[:collection_file]
  end
%>

<% if params[:content_viewer] == "off" %>
  <PRE><%= h(File.read(path)) %></PRE>
<% else %>
  <% overlay_content_link "Show Displayable Content", :class => "action_link" do %>
    <PRE><%= h(File.read(path)) %></PRE>
  <% end %>
<% end %>