 
<table class="plain_file_list" class="resource_list">
   <tr class="list-odd">
     <% if @userfile.is_locally_synced? %>
     <th>
       <%= select_all_checkbox "collection_checkbox" %>
     </th>
     <% end %>
     <th>File</th>
     <th>Size</th>
   </tr>
   <%= render :partial => 'userfiles/viewers/directory_contents', :locals  => {:file_list  => @userfile.list_files(".", [:regular, :directory])} %>

</table>
