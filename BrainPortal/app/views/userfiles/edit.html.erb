<% title h("Edit Tags for #{@userfile.name}") %>

<h1>Edit Tags for <%= h @userfile.name %></h1>

<% form_for(@userfile) do |f| %>
  <%= f.error_messages %>
  
  <label for="Tags">Tags:</label>

  <table>
     <% for tag in @tags %>
         <tr class="<%= cycle('list-odd', 'list-even') %>">
            <td><%= check_box_tag("userfile[tag_ids][]", tag.id.to_s, @userfile.tags.include?(tag)) %></td> 
           <td><%= h(tag.name) -%></td>
         </tr>
     <% end %>
  </table>
  
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= button_to 'Cancel', tags_path , :method => :get %>
