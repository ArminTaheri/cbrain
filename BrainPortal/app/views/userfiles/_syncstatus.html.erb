<% @_syncstatus_rr_cache ||= {} %>
<% @_syncstatus_rr_cache[syncstat.remote_resource_id] ||= syncstat.remote_resource %>
<% html_tool_tip status_html_symbol(syncstat.status) do %>
  <%= @_syncstatus_rr_cache[syncstat.remote_resource_id].class.to_s + " '" + @_syncstatus_rr_cache[syncstat.remote_resource_id].name + "' : " + status_html_symbol(syncstat.status) + " (" + syncstat.status + ")" %>
  <% if syncstat.status == 'InSync' -%>
    <br>
    Last Synchronized Date: <%= pretty_past_date syncstat.synced_at %><br>
    Last Accessed Date:     <%= pretty_past_date syncstat.accessed_at %>
  <% end -%>
<% end %>
