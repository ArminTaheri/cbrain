<% button_with_dropdown_menu(:title => "Download Files") do %>
  Specify Download File Name (optional):
  <%= text_field_tag :specified_filename %>
  <%= submit_tag("Download Files") %>
<% end %>

<% button_with_dropdown_menu(:title => "Filter Files") do %>
   <%= render :partial => "filters"%>
<% end %>

<% button_with_dropdown_menu(:title => "Tag Files")  do %>
    <center>
    <%= render :partial => 'tag_table'%>
    <%= link_to 'Manage Tags', tags_path %>
    </center>
<% end %>

<% button_with_dropdown_menu(:title => "Update Groups") do %>
   <br>
   Group Update: 
   <%= select(:userfile, :group_id, @user_groups.collect{|g| [g.name, g.id] }, {:selected => @default_group} , :class => :group) %>
   <%= submit_tag("Update Groups") %> 
   <br>
   Group permission update: 
   <%= select(:userfile, :group_writable, [['Read Only', false],['Read/Write', true]]) %>
   <%= submit_tag("Update Permissions") %> 
<% end %>

<% button_with_dropdown_menu(:title => "Move/Copy Files")  do %>
    <%= data_provider_select("data_provider_id") %>
    <%= submit_tag("Move Files") %>
    <%= submit_tag("Copy Files") %>
<% end %>

<%= submit_button("Jiv Viewer", {:name => "commit", :id => "jiv_submit"}) %>

<%= submit_button("Create Collection", {:name => "commit"}) %>

<%= submit_button("Delete Files", {:name => "commit", :onclick => "return confirm('Are you sure you want to delete the selected files?');"}) %>

