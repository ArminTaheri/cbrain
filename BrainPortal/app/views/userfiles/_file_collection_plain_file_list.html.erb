 
<table class="plain_file_list" class="resource_list">
   <tr class="list-odd">
     <th>
       <% if @userfile.is_locally_synced? %>
           &nbsp;
           <%= link_to_function '&#10004;' do |page|
               page.select(".collection_checkbox").each do |check_box|
                 check_box.checked=true
               end
             end
           %>
           &nbsp;
           <%= link_to_function '<big>&times;</big>' do |page|
               page.select(".collection_checkbox").each do |check_box|
                 check_box.checked=false
               end
             end
           %>
       <% end %>
     </th>
     <th>File</th>
     <th>Size</th>
   </tr>
   <%= render :partial => 'directory_contents', :locals  => {:file_list  => @userfile.list_files(".", [:regular, :directory])} %>

</table>
