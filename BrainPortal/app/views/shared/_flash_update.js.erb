<% [ :notice, :error ].each do |type| %>
  $('.flash_<%= type %>').remove();
  <% next if flash[type].nil? || flash[type].blank? %>
  $('#main').prepend($(<%= html_for_js(render :partial  => "messages/flash_display", :locals => { :type => type, :msg => flash[type] }) %>));
  <% flash.discard(type) %>
<% end %>

