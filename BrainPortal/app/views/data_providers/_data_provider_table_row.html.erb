
<tr class="<%= cycle("list-odd", "list-even") %> row_highlight" id="data_provider_<%= data_provider.id %>">
  <td><%= link_to_data_provider_if_accessible(data_provider) %></td>
  <td class="provider_details" style="display:none"><%= link_to_user_if_accessible(data_provider.user) %></td>
  <td><%= link_to_group_if_accessible(data_provider.group) %></td>
  <td class="provider_details" style="display:none"><%= link_to_site_if_accessible(data_provider.site) %></td>
  <td><%= data_provider.online    ? "Yes" : "<font color=\"red\">No</font>" %></td>
  <td id="is_alive_<%= data_provider.id %>"><span class="loading_message">Checking...</span></td>
  <td><%= h(data_provider.read_only    ? "Read Only"    : "Read/Write") %></td>
  <td class="provider_details" style="display:none"><%= h(data_provider.not_syncable ? "NOT syncable" : "Fully syncable") %></td>
  <td class="provider_details" style="display:none"><%= h(data_provider.description) %></td>
  <td>
     <% if data_provider.has_owner_access?(current_user) %>
     <%= link_to 'Edit', edit_data_provider_path(data_provider), :class => 'action_link' %>
     <% end %>
  </td>
  <td>
     <% if data_provider.has_owner_access?(current_user) %>
       <%= 
           link_to 'Delete', data_provider_path(data_provider), :class  => "action_link delete_button", 
                                                                "data-confirm"  => 'Are you sure?', 
                                                                "data-delete-selector"  => "#data_provider_#{data_provider.id}",
                                                                "data-delete-text"  => "<td colspan='11' style='color:red; text-align:center'>Deleting...</td>"
       %>
     <% end %>
  </td>
  <td>
     <% if data_provider.is_browsable? && data_provider.can_be_accessed_by?(current_user) && data_provider.online? %>
     <%= link_to 'Browse', browse_data_provider_path(data_provider), :class => 'action_link' %>
     <% end %>
  </td>
</tr>

