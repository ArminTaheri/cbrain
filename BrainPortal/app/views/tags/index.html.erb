-%>

<div class = "generalcontent">
     
     <div class="resource_list_upper_form">
            <%= 
              link_to_function 'Create New Tag', :class  => 'action_link' do |page|
                page['new_tag'].toggle
              end 
              %>
            <div id="new_tag" style="display:none">
              <%= render :partial  => 'new' %>
            </div>
      </div> <!-- End class="upper_form" -->


      <table class="resource_list" id="tag_table">
        <tr>
          <th>Tag Name</th>
          <th colspan="3">Operations</th>
        </tr>

         <% for tag in @tags %>
            <%= render :partial => 'tag_table_row', :locals  => {:tag  => tag} %>
         <% end %>
      </table>
      <br/>
</div>  <!-- End class="generalcontent" -->
