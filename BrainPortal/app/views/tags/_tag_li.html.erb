<b>
  <%=
    ajax_link(
      crop_text_to(15, tag.name),
      url_for(
        scope_filter_params(@scope, :set, {
          'type'  => 'uf.tags',
          'value' => [tag.id]
        }).reverse_merge({
          :controller => :userfiles
        })
      ),
      :class    => 'action_link',
      :datatype => :script
    )
  %>
</b>

<small><small>
  <% if tag.group_id != current_user.own_group.id %>
    (Project: <%= tag.group.name %>)
  <% end %>
  <% if tag.user_id == current_user.id %>
   <%= overlay_ajax_link "Edit", edit_tag_path(tag) %>
  <%= ajax_link 'Delete', tag_path(tag), :confirm => "Are you sure you want to delete tag '#{tag.name}' ?", :method => :delete, :datatype  => 'script' %>  
 <% end %>
</small></small>

