<div class = "generalcontent">

<% title "Users"%>

<div class="resource_list_upper_form">
      <%= 
        link_to_function 'Create New User', :class  => 'action_link' do |page|
          page['new_user'].toggle
        end 
        %>
      <div id="new_user" style="display:none">
        <%= render :partial  => 'new' %>
      </div>
</div> <!-- End class="upper_form" -->

<table class="resource_list" id="user_table">
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
    <th>Groups</th>
    <th>Role</th>
    <th>Site</th>
    <th>Number of Files</th>
    <th colspan="2">Operations</th>
  </tr>

<% for user in @users %>
  <%= render :partial => 'user_table_row', :locals  => {:user  => user}%>
<% end %>
</table>
</div>