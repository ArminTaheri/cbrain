<% title 'Lost Password?' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">Reset Password</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-sm-offset-4">
      <div class="well">
        <%= form_tag send_password_users_path do %>

          <div class="row">
            <div class="col-xs-4 text-right"><label for="login">CBRAIN login</label></div>
            <div class="col-xs-8"><%= text_field_tag :login, nil, :class => "form-control" %></div>
          </div>
          <div class="row">
            <div class="col-xs-4 text-right"><label for="email">Email</label></div>
            <div class="col-xs-8"><%= text_field_tag :email, nil, :class => "form-control" %></div>
          </div>
          <div class="row">
            <div class="col-xs-8 col-sm-offset-4"><%= submit_tag 'Submit', :class => "btn btn-primary btn-block" %></div>
          </div>

        <% end %>
      </div>

    </div>
  </div>
</div>





