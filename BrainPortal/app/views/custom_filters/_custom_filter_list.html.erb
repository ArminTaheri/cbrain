<div class="col-xs-12">
  <li><div><%= link_to 'Create Custom Filter', {:controller => :custom_filters, :action => :new, :filter_class => @custom_filter.class.name}, { :class => "btn btn-primary btn-xs" } %></div></li>

  <% @custom_filter.class.all(:conditions  =>  {:user_id  => current_user.id}).each do |filter| %>

    <li class="dropdown-header"><%= crop_text_to(15, filter.name) %></li>
    <li>
      <div class="btn-group btn-group-xs btn-group-justified">
        <%=
          scope_custom_link("Apply",
            @scope, { 'custom_filters' => [filter.id] },
            url:  {
              'controller'  => @custom_filter.filtered_class_controller,
              '_scope_mode' => 'append'
            },
            link: {
              :ajax => true,
              :class => 'btn btn-primary'
            }
          )
        %>
        <%= link_to "Edit", custom_filter_path(filter), :class => "btn btn-primary" %>
        <%= ajax_link 'Delete', custom_filter_path(filter), :confirm => "Are you sure you want to delete filter '#{filter.name}' ?", :method => :delete, :datatype  => 'script', :class => "btn btn-primary" %>
      </div>
    </li>

  <% end %>
</div>
