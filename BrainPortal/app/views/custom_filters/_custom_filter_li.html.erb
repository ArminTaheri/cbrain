<b>
<% if filter.is_a? UserfileCustomFilter %>
  <%= ajax_link crop_text_to(15, filter.name), { :controller  => :userfiles, :action  => :index, :userfiles_custom_filter  => filter.id }, :datatype  => 'script' %>
<% else %>
  <%= ajax_link crop_text_to(15, filter.name), { :controller  => filter.filtered_class_controller, :action => :index, :tasks => { :filters => { :custom_filter  => filter.id } } }, :datatype  => 'script' %>
<% end %>
</b>
<small><small>
   <% overlay_content_link "Edit", :enclosing_element  => "span" do %>
      <div id="edit_custom_filter_<%= filter.id %>">
        <%= render :partial  => "custom_filters/edit", :locals  => {:custom_filter  => filter} %>
      </div>
   <% end %>
   <%= ajax_link 'Delete', custom_filter_path(filter), :confirm => "Are you sure you want to delete filter '#{filter.name}' ?", :method => :delete, :datatype  => 'script' %>  
</small></small>
