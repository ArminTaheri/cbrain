<table id="work_project_table" class="resource_list">

  <tr>
  <% if current_user.has_role?(:admin) %>
    <th colspan="14">Work Projects</th>       
  <% else %>
    <th colspan="9">Work Projects</th>
  <% end %>
  </tr>
  <tr>
    <th class="subtitle">Name</th>
    <th class="subtitle">Type</th>
    <th class="subtitle">Site</th>
    <th class="subtitle">Users</th>
    <th class="subtitle">Files</th>
    <th class="subtitle">Tasks</th>
    <% if current_user.has_role?(:admin) %>
      <th class="subtitle">Tools</th>
      <th class="subtitle">Data providers</th>
      <th class="subtitle">Portal</th>
      <th class="subtitle">Execution</th>
    <% end %>
    <th class="subtitle" colspan="3"/>
  </tr>

  <% for group in @work_groups %>
    <%= render :partial => 'group_table_row', :locals  => {:group  => group} %>
  <% end %>

</table>

