
<% title "Project Info" %>

<h2>Details for <%= @group.pretty_category_name(current_user) %> '<%= @group.name %>'</h2>

<div class="generalbox">
  <% if (@group.is_a?(WorkGroup) || @group.is_a?(InvisibleGroup)) && @group.can_be_edited_by?(current_user) %>
    <div class="menu_bar menu_bar_left">
      <%= link_to 'Switch', switch_group_path(@group), :class => "button", :method  => :post %>
      <%= link_to 'Edit', edit_group_path(@group), { :class => "button" } %>
      <%= link_to 'Delete', group_path(@group), { :confirm => "Are you sure you want to delete '#{@group.name}' ?", :method => :delete, :class => "button" } %>
    </div>
  <% end %>
  <P>
  
  <table class="property_list">
    <tr>
      <th colspan="2" class="subtitle">Project information</th>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Name</th>
        <td><%= @group.name %></td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Type</th>
        <td><%= @group.pretty_category_name(current_user) %></td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Site</th>
        <td>
          <%= link_to_site_if_accessible(@group.site) %>
        </td>
    </tr>
     <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Users</th>
        <td>
          <%= array_to_table(@group.users.sort{ |a,b| a.login.casecmp(b.login)}, :table_class => 'simple bordered') { |u,r,c| link_to_user_with_tooltip(u) }%>
        </td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Files</th>
        <td>
          <%= array_to_table(@group.userfiles.sort{ |a,b| a.name.casecmp(b.name)}, :table_class => 'simple bordered') { |uf,r,c| link_to_userfile_if_accessible(uf) } %>
        </td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Tasks</th>
        <td>
          <%= array_to_table(@group.cbrain_tasks.sort{ |a,b| a.name.casecmp(b.name)},:table_class => 'simple bordered') { |t,r,c| link_to_task_if_accessible(t) } %>
        </td>
    </tr>
    <% if current_user.has_role?(:admin) %>
      <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Tools</th>
          <td>
            <%= array_to_table(@group.tools.sort{ |a,b| a.name.casecmp(b.name)}, :table_class => 'simple bordered') { |t,r,c| t.name } %>
          </td>
      </tr>
      <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Data providers</th>
          <td>
            <%= array_to_table(@group.data_providers.sort{ |a,b| a.name.casecmp(b.name)}, :table_class => 'simple bordered') { |dp,r,c| link_to_data_provider_if_accessible(dp) } %>
          </td>
      </tr>
      <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Portal</th>
          <td>
            <%= array_to_table(BrainPortal.where( :group_id => @group.id).all.sort{ |a,b| a.name.casecmp(b.name)},:table_class => 'simple bordered') { |b,r,c| link_to_bourreau_if_accessible(b) } %>
          </td>
      </tr>
          <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Execution</th>
          <td>
            <%= array_to_table(Bourreau.where( :group_id => @group.id).all.sort{ |a,b| a.name.casecmp(b.name)},:table_class => 'simple bordered') { |b,r,c| link_to_bourreau_if_accessible(b) } %>
          </td>
      </tr>
    <% end %>
  </table>
</div>
