<br>


<div id="new_group">
      <% form_for :group, @group, :url => { :action => "create" }, :html  => {:class  => "ajax_form", "data-datatype" => "script"} do |f| -%>

        <%= f.error_messages %>

        <p>
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </p>
        <p><label for="role">Site</label><br/>
         <%= f.collection_select :site_id, Site.all, :id, :name, {:include_blank  => true}, :disabled  => current_user.has_role?(:site_manager)  %></p>

        <label for="users">Users in group:</label>
        <table id = "button_table">
           <% for user in @users %>
               <tr>
                 <td class="left_align"><%= check_box_tag("group[user_ids][]", user.id.to_s) %></td>
                 <td class="left_align"><%= h(user.full_name) -%></td>
               </tr>
           <% end %>
        </table>
        <p>
          <%= f.submit "Create" %>
        </p>
      <% end %>
</div>
