<tr>
    <th>Message</th>
    <th>Last Updated</th>
    <th></th>
</tr>

<% for mess in @messages %>
    <%= render :partial => 'message_table_row', :locals  => {:mess  => mess} %>
<% end %>

<% if @messages.nil? || @messages.empty? %>
  <tr class="list-odd"><td colspan="3">There are no Messages in this list.</td></tr>
<% end %>