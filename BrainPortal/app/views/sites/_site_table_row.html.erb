
<tr class="<%= cycle('list-odd', 'list-even') %> row_highlight" id="site_<%= site.id %>">
  <td><%=link_to h(site.name), site_path(site) %></td>
  <td><%= site.managers.collect{ |m| link_to(m.login, user_path(m))}.sort{|a, b| a.casecmp(b)}.join('<BR>') %></td>
  <td><%= site.users.count %></td>
  <td><%= site.groups.count %></td>   
  <td><%= link_to 'Edit', edit_site_path(site), :class  => 'action_link' %></td>
  <td>
    <%= 
         link_to 'Delete', site_path(site), :class  => "action_link delete_button", 
                                            "data-confirm"  => 'Are you sure?', 
                                            "data-delete-selector"  => "#site_#{site.id}",
                                            "data-delete-text"  => "<td colspan='6' style='color:red; text-align:center'>Deleting...</td>"
     %>
  </td>
</tr>

