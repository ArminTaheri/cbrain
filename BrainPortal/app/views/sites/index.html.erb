<div class="generalcontent">

   <% title 'Sites' %>
  
   <%= javascript_tag "var current_options;" %> 

   <div class = "menu_bar">
          <% button_with_dropdown_menu({:title => 'Create New Site', :partial => 'new'}, {:id => "new_site_button"}) %>
    </div>
      
  <table class="resource_list" id="site_table">
    <tr>
      <th>Name</th>
      <th>Managers</th>
      <th>Number of Users</th>
      <th>Number of Groups</th>
      <th colspan="3">Operations</th>
    </tr>

    <% for site in @sites %>
      <%= render :partial => 'site_table_row', :locals  => {:site  => site} %>
    <% end %>
  </table>
  
  
</div>
