<%
#
# Partial with these locals:
#
# demand          : demand object
# sym_res         : a result symbol
# info            : info message
# exception_trace : stack trace when error
#
%>

<h3>Result for <%= crop_text_to(30, demand.full_name) %>, <%= crop_text_to(30, demand.institution) %></h3>

<% if info.present? %>

  <% if info =~ /\Aerror/i %>
    <div class="flash_error"><pre><%= info.to_s %></pre></div>
  <% else %>
    <div class="flash_notice"><pre><%= info.to_s %></pre></div>
  <% end %>

<% end %>
