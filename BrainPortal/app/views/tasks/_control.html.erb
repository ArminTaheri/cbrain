
<table class="simple">

  <tr>
    <td>
      <strong>Execution server:</strong><br>
      <%= bourreau_select "cbrain_task[bourreau_id]", { :selector => @task.bourreau_id, :bourreaux => @bourreaux } , { :include_blank => "Any Available", :disabled => (! @task.new_record? ) } %>
    </td>

    <td>
      <strong>Save results to:</strong>
      <%= overlay_data_providers_descriptions(@data_providers) %><br>
      <%= data_provider_select :data_provider_id.to_la, { :selector => @task.params[:data_provider_id], :data_providers => @data_providers } , { :include_blank => "Data provider of input files" } %>
    </td>

    <td rowspan="2">
      <strong>Description:</strong><br>
      <%= text_area_tag "cbrain_task[description]", @task.description, :rows => 4, :cols => 35 %><br>
      <small>(This first line should be a summary, and the rest are your notes)</small>
    </td>

  </tr>

  <tr>
    <td>
      <strong>Owner:</strong><br>
      <%= user_select "cbrain_task[user_id]", @task.user_id, { :disabled => ! (current_user.has_role?(:site_manager) || current_user.has_role?(:admin)) } %>
    </td>

    <td>
      <strong>Project:</strong><br>
      <%= group_select "cbrain_task[group_id]", @task.group_id %>
    </td>
  </tr>

</table>

