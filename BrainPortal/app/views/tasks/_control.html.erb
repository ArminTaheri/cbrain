
<h2>Task Control:
<%= show_hide_toggle "(show/hide)", ".control_box", :class => 'task_help_link', :slide_effect => true, :slide_duration => 'fast' %>
</h2>

<table class="simple control_box<%= " hidden" if (! @task.new_record?) && @task.status != "Duplicated" %>">

  <tr>
    <td <%= 'class="error_display"' if @task.status == 'Duplicated' %>>
      <strong>Server&nbsp;&amp;&nbsp;Version:</strong><br>
      <%= tool_config_select "cbrain_task[tool_config_id]", :tool_configs => @tool_configs, :selector => @task %>
    </td>

    <td>
      <strong>Save&nbsp;results&nbsp;to:</strong>
      <%= overlay_data_providers_descriptions %><br>
      <%= data_provider_select "cbrain_task[results_data_provider_id]", { :selector => @task.results_data_provider_id } , { :include_blank => "Data provider of input files" } %>
    </td>

    <td rowspan="2">
      <strong>Description:</strong><br>
      <%= text_area_tag "cbrain_task[description]", @task.description, :rows => 4, :cols => 35 %><br>
      <small>(This first line should be a short summary, and the rest are your notes)</small>
    </td>
  </tr>

  <tr>
    <td>
      <strong>Owner:</strong><br>
      <%= user_select "cbrain_task[user_id]", @task.user_id, { :disabled => ! (current_user.has_role?(:site_manager) || current_user.has_role?(:admin)) } %>
    </td>

    <td>
      <strong>Project:</strong><br>
      <%= group_select "cbrain_task[group_id]", @task.group_id %>
    </td>
  </tr>

</table>

