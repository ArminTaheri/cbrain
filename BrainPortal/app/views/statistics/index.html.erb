
<h2>Statistics</h2>

<h3>Per User Statistics</h3>

<table class="resource_list">
  <tr>
    <th>Task</th>
    <th>Number of times used</th>
    <th>Percent Used</th>
  </tr>
  <% if @task_names != nil %>
    <% for task in @task_names %>
      <tr>
        <td><%=h task %></td>
        <td><%=h stats = (Statistic.user_task_stats(task, current_user.id)) %></td>
        <td><%=h (((stats.to_f*100)/(Statistic.total_task_user(current_user.id)).to_f).round(2)) %>%</tr> 
      </tr>
    <% end %>
  <% end %>
</table>

<P>

<h3>Per Execution Server Statistics</h3>

<table class="resource_list">
  <tr>
    <th>Bourreau</th>
  </tr>
  <% for bourreau in @bourreaux %>
    <tr>
      <td><%= link_to bourreau.name, statistic_path(bourreau) %></td>
    </tr>
  <% end %>
</table>
        
