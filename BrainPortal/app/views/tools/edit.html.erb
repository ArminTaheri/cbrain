<% title 'Edit Tool' %>

<div class="menu_bar">
  <%= link_to 'Delete', tool_path(@tool), { :confirm => "Are you sure you want to delete '#{@tool.name}' ?", :method => :delete, :class => "button" } %>
</div>


<div class="generalbox">
  <%= form_for(@tool) do |f| %>
    <%= render :partial => 'form_fields', :locals  => {:f  => f} %>
    <p>
      <%= f.submit "Update tool" %>
    </p>
  <% end %>

  <%= button_to 'Cancel', tools_path, :method  => :get %>
</div> 

